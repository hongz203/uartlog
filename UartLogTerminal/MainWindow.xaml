<Window x:Class="UartLogTerminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UartLogTerminal"
        mc:Ignorable="d"
        Title="UART Log Terminal"
        Height="900"
        Width="1480"
        MinHeight="700"
        MinWidth="1180">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style TargetType="Window">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#F3F3F3" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Margin" Value="0,0,0,1" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#0E639C" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,5" />
            <Setter Property="Margin" Value="6,0,0,0" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3C3C3C" />
                    <Setter Property="Foreground" Value="#858585" />
                </Trigger>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#007ACC" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ThemeIconButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="#CCCCCC" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#E2E5E9" />
                    <Setter Property="Foreground" Value="#5F656D" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolbarIconButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style x:Key="ToolbarIconToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="6,0,0,0" />
            <Setter Property="Background" Value="#0E639C" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#1177BB" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3C3C3C" />
                    <Setter Property="Foreground" Value="#858585" />
                </Trigger>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#007ACC" />
                    <Setter Property="Foreground" Value="#FFFFFF" />
                </DataTrigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False" />
                        <Condition Binding="{Binding IsChecked, RelativeSource={RelativeSource Self}}" Value="True" />
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#006CB3" />
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VsCodeScrollThumbStyle" TargetType="Thumb">
            <Setter Property="MinWidth" Value="18" />
            <Setter Property="MinHeight" Value="18" />
            <Setter Property="Background" Value="#66797979" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#99797979" />
                </Trigger>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#70848A92" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VsCodeScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Opacity" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track"
                                   Orientation="{TemplateBinding Orientation}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Value, Mode=TwoWay}"
                                   ViewportSize="{TemplateBinding ViewportSize}"
                                   IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Opacity="0" IsHitTestVisible="False" Focusable="False" />
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource VsCodeScrollThumbStyle}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Opacity="0" IsHitTestVisible="False" Focusable="False" />
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="PART_Track" Property="IsDirectionReversed" Value="False" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ScrollViewer}}" Value="True">
                    <Setter Property="Opacity" Value="0.65" />
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9" />
                </Trigger>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="10" />
                    <Setter Property="Width" Value="Auto" />
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="10" />
                    <Setter Property="Height" Value="Auto" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="CaretBrush" Value="#D4D4D4" />
            <Setter Property="SelectionBrush" Value="#264F78" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#EDEDED" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                    <Setter Property="CaretBrush" Value="#1F1F1F" />
                    <Setter Property="SelectionBrush" Value="#BDD7EE" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderBrush" Value="#3C3C3C" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="ComboBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <ContentPresenter Margin="10,0,30,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />
                                    <Path Width="8"
                                          Height="5"
                                          Margin="0,0,10,0"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Fill="{TemplateBinding Foreground}"
                                          Data="M 0 0 L 4 5 L 8 0 Z" />
                                </Grid>
                            </Border>

                            <ToggleButton Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press" />

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   Focusable="False"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border x:Name="PopupBorder"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1">
                                    <ScrollViewer CanContentScroll="True">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ComboBorder" Property="Background" Value="#3C3C3C" />
                                <Setter Property="Foreground" Value="#858585" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#EDEDED" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                    <Setter Property="BorderBrush" Value="#C8CCD3" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="RichTextBox">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,8" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#F7F7F7" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#3C3C3C" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="Padding" Value="8,5" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#2A2D2E" />
                </Trigger>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2D2D2D" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="Padding" Value="14,7" />
            <Setter Property="Margin" Value="0,0,2,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabRoot"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabRoot" Property="Background" Value="#1E1E1E" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#858585" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#F7F7F7" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DockHintTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#808080" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#666666" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AdvancedExpanderStyle" TargetType="Expander">
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Expander}}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VerticalSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="{Binding DataContext.ThemePanelBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Grid Background="{TemplateBinding Background}">
                            <Border x:Name="HoverLine"
                                    Width="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch"
                                    Background="#66007ACC"
                                    Opacity="0" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverLine" Property="Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="HoverLine" Property="Opacity" Value="1" />
                            </Trigger>
                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                <Setter TargetName="HoverLine" Property="Background" Value="#6A808A96" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HorizontalSplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="{Binding DataContext.ThemePanelBrush, RelativeSource={RelativeSource AncestorType=Window}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridSplitter">
                        <Grid Background="{TemplateBinding Background}">
                            <Border x:Name="HoverLine"
                                    Height="2"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    Background="#66007ACC"
                                    Opacity="0" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverLine" Property="Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="HoverLine" Property="Opacity" Value="1" />
                            </Trigger>
                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                <Setter TargetName="HoverLine" Property="Background" Value="#6A808A96" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisibleWhenRightDock" TargetType="Grid">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFilterPanelBottom}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibleWhenBottomDock" TargetType="Grid">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFilterPanelBottom}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="FilterPanelTemplate">
            <TabControl ItemsSource="{Binding FilterTabs}"
                        SelectedItem="{Binding SelectedFilterTab}"
                        Background="{Binding DataContext.ThemePanelBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                        Foreground="{Binding DataContext.ThemeForegroundBrush, RelativeSource={RelativeSource AncestorType=Window}}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid Background="{Binding DataContext.ThemePanelBrush, RelativeSource={RelativeSource AncestorType=Window}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Padding="8"
                                    BorderThickness="0"
                                    CornerRadius="0"
                                    Background="{Binding DataContext.ThemeEditorBrush, RelativeSource={RelativeSource AncestorType=Window}}">
                                <WrapPanel VerticalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center" Text="Tab Name" />
                                    <TextBox Margin="8,0,10,0"
                                             Width="140"
                                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock VerticalAlignment="Center" Text="Keyword / Regex" />
                                    <TextBox Margin="8,0,10,0"
                                             Width="240"
                                             Text="{Binding Expression, UpdateSourceTrigger=PropertyChanged}" />
                                    <CheckBox Margin="2,0,10,0"
                                              VerticalAlignment="Center"
                                              Content="Regex"
                                              IsChecked="{Binding UseRegex}" />
                                    <CheckBox Margin="2,0,10,0"
                                              VerticalAlignment="Center"
                                              Content="Match case"
                                              IsChecked="{Binding MatchCase}" />
                                    <TextBlock VerticalAlignment="Center" Text="FG" />
                                    <ComboBox Margin="8,0,10,0"
                                              Width="120"
                                              ItemsSource="{Binding DataContext.ColorOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                              DisplayMemberPath="Name"
                                              SelectedItem="{Binding SelectedForegroundColor}" />
                                    <TextBlock VerticalAlignment="Center" Text="BG" />
                                    <ComboBox Margin="8,0,0,0"
                                              Width="120"
                                              ItemsSource="{Binding DataContext.ColorOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                              DisplayMemberPath="Name"
                                              SelectedItem="{Binding SelectedBackgroundColor}" />
                                </WrapPanel>
                            </Border>

                            <RichTextBox Grid.Row="1"
                                         Margin="0,10,0,0"
                                         IsReadOnly="True"
                                         IsUndoEnabled="False"
                                         FontFamily="Cascadia Mono"
                                         FontSize="13"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"
                                         Background="{Binding DataContext.ThemeListBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                         Foreground="{Binding DataContext.ThemeForegroundBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                         local:RichTextLogRenderer.LinesSource="{Binding Lines}">
                                <RichTextBox.Resources>
                                    <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource VsCodeScrollBarStyle}" />
                                </RichTextBox.Resources>
                            </RichTextBox>
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Text="COM Port" />
                    <ComboBox Margin="8,0,0,0"
                              Width="130"
                              ItemsSource="{Binding AvailablePorts}"
                              SelectedItem="{Binding SelectedPort}" />
                    <Button Command="{Binding RefreshPortsCommand}"
                            Style="{StaticResource ToolbarIconButtonStyle}"
                            ToolTip="Refresh Ports">
                        <Viewbox Width="16" Height="16" Stretch="Uniform">
                            <Canvas Width="24" Height="24">
                                <Path Data="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round" />
                                <Path Data="M21 3v5h-5"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round" />
                                <Path Data="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round" />
                                <Path Data="M8 16H3v5"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="2"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round" />
                            </Canvas>
                        </Viewbox>
                    </Button>

                    <TextBlock Margin="14,0,0,0" VerticalAlignment="Center" Text="Baud" />
                    <ComboBox Margin="8,0,0,0"
                              Width="120"
                              ItemsSource="{Binding BaudRates}"
                              SelectedItem="{Binding SelectedBaudRate}" />
                    <ToggleButton IsChecked="{Binding ShowAdvancedSerialSettings}"
                                  Style="{StaticResource ToolbarIconToggleButtonStyle}"
                                  ToolTip="Advanced Serial Settings">
                        <Viewbox Width="16" Height="16" Stretch="Uniform">
                            <Canvas Width="24" Height="24">
