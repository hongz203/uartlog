<Window x:Class="UartLogTerminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UartLogTerminal"
        mc:Ignorable="d"
        Title="UART Log Terminal"
        Height="900"
        Width="1480"
        MinHeight="700"
        MinWidth="1180">
    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#F3F3F3" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Margin" Value="0,0,0,1" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#0E639C" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,5" />
            <Setter Property="Margin" Value="6,0,0,0" />
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#3A3D41" />
                    <Setter Property="Foreground" Value="#A4AAB4" />
                </Trigger>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#007ACC" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ThemeIconButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="34" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Background" Value="#3A3D41" />
            <Setter Property="Foreground" Value="#D0D4DB" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#E2E5E9" />
                    <Setter Property="Foreground" Value="#5F656D" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1F1F1F" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="6,4" />
            <Setter Property="CaretBrush" Value="#D4D4D4" />
            <Setter Property="SelectionBrush" Value="#264F78" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#EDEDED" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                    <Setter Property="CaretBrush" Value="#1F1F1F" />
                    <Setter Property="SelectionBrush" Value="#BDD7EE" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2B2E33" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderBrush" Value="#3A3D41" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,3" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="ComboBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <ContentPresenter Margin="10,0,30,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />
                                    <Path Width="8"
                                          Height="5"
                                          Margin="0,0,10,0"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Fill="{TemplateBinding Foreground}"
                                          Data="M 0 0 L 4 5 L 8 0 Z" />
                                </Grid>
                            </Border>

                            <ToggleButton Background="Transparent"
                                          BorderThickness="0"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          ClickMode="Press" />

                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   Focusable="False"
                                   AllowsTransparency="True"
                                   IsOpen="{TemplateBinding IsDropDownOpen}">
                                <Border x:Name="PopupBorder"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1">
                                    <ScrollViewer CanContentScroll="True">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ComboBorder" Property="Background" Value="#3A3D41" />
                                <Setter Property="Foreground" Value="#A4AAB4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#EDEDED" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                    <Setter Property="BorderBrush" Value="#C8CCD3" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="RichTextBox">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,8" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#F7F7F7" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#2B2E33" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="Padding" Value="8,5" />
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#3A3D41" />
                </Trigger>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2B2E33" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="Padding" Value="14,7" />
            <Setter Property="Margin" Value="0,0,2,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabRoot"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              ContentSource="Header" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabRoot" Property="Background" Value="#3A3D41" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="#8E949D" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#1E1E1E" />
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#F7F7F7" />
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#252526" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#FFFFFF" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DockHintTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#9DA0A6" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#666666" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AdvancedExpanderStyle" TargetType="Expander">
            <Setter Property="Foreground" Value="#D4D4D4" />
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Expander}}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Foreground" Value="#1F1F1F" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SplitterStyle" TargetType="GridSplitter">
            <Setter Property="Background" Value="#333333" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                    <Setter Property="Background" Value="#D0D0D0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibleWhenRightDock" TargetType="Grid">
            <Setter Property="Visibility" Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFilterPanelBottom}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisibleWhenBottomDock" TargetType="Grid">
            <Setter Property="Visibility" Value="Collapsed" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsFilterPanelBottom}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="FilterPanelTemplate">
            <TabControl ItemsSource="{Binding FilterTabs}"
                        SelectedItem="{Binding SelectedFilterTab}"
                        Background="{Binding DataContext.ThemePanelBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                        Foreground="{Binding DataContext.ThemeForegroundBrush, RelativeSource={RelativeSource AncestorType=Window}}">
                <TabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </TabControl.ItemTemplate>
                <TabControl.ContentTemplate>
                    <DataTemplate>
                        <Grid Background="{Binding DataContext.ThemePanelBrush, RelativeSource={RelativeSource AncestorType=Window}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Padding="8"
                                    BorderThickness="0"
                                    CornerRadius="0"
                                    Background="{Binding DataContext.ThemeEditorBrush, RelativeSource={RelativeSource AncestorType=Window}}">
                                <WrapPanel VerticalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center" Text="Tab Name" />
                                    <TextBox Margin="8,0,10,0"
                                             Width="140"
                                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock VerticalAlignment="Center" Text="Keyword / Regex" />
                                    <TextBox Margin="8,0,10,0"
                                             Width="240"
                                             Text="{Binding Expression, UpdateSourceTrigger=PropertyChanged}" />
                                    <CheckBox Margin="2,0,10,0"
                                              VerticalAlignment="Center"
                                              Content="Regex"
                                              IsChecked="{Binding UseRegex}" />
                                    <CheckBox Margin="2,0,10,0"
                                              VerticalAlignment="Center"
                                              Content="Match case"
                                              IsChecked="{Binding MatchCase}" />
                                    <TextBlock VerticalAlignment="Center" Text="FG" />
                                    <ComboBox Margin="8,0,10,0"
                                              Width="120"
                                              ItemsSource="{Binding DataContext.ColorOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                              DisplayMemberPath="Name"
                                              SelectedItem="{Binding SelectedForegroundColor}" />
                                    <TextBlock VerticalAlignment="Center" Text="BG" />
                                    <ComboBox Margin="8,0,0,0"
                                              Width="120"
                                              ItemsSource="{Binding DataContext.ColorOptions, RelativeSource={RelativeSource AncestorType=Window}}"
                                              DisplayMemberPath="Name"
                                              SelectedItem="{Binding SelectedBackgroundColor}" />
                                </WrapPanel>
                            </Border>

                            <RichTextBox Grid.Row="1"
                                         Margin="0,10,0,0"
                                         IsReadOnly="True"
                                         IsUndoEnabled="False"
                                         FontFamily="Cascadia Mono"
                                         FontSize="13"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Auto"
                                         Background="{Binding DataContext.ThemeListBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                         Foreground="{Binding DataContext.ThemeForegroundBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                                         local:RichTextLogRenderer.LinesSource="{Binding Lines}" />
                        </Grid>
                    </DataTemplate>
                </TabControl.ContentTemplate>
            </TabControl>
        </DataTemplate>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}">
            <StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Text="COM Port" />
                    <ComboBox Margin="8,0,0,0"
                              Width="130"
                              ItemsSource="{Binding AvailablePorts}"
                              SelectedItem="{Binding SelectedPort}" />

                    <TextBlock Margin="14,0,0,0" VerticalAlignment="Center" Text="Baud" />
                    <ComboBox Margin="8,0,0,0"
                              Width="120"
                              ItemsSource="{Binding BaudRates}"
                              SelectedItem="{Binding SelectedBaudRate}" />

                    <Button Content="Refresh" Command="{Binding RefreshPortsCommand}" />
                    <Button Content="Connect" Command="{Binding ConnectCommand}" />
                    <Button Content="Disconnect" Command="{Binding DisconnectCommand}" />
                    <Button Command="{Binding ToggleThemeCommand}"
                            Style="{StaticResource ThemeIconButtonStyle}"
                            ToolTip="{Binding ThemeToggleText}">
                        <Grid Width="16" Height="16">
                            <Path Data="M13.8,11.6C12.7,12.7 11.1,13.4 9.4,13.4C6,13.4 3.2,10.6 3.2,7.2C3.2,5.5 3.9,4 5,2.8C2.6,3.6 0.9,5.9 0.9,8.6C0.9,12 3.6,14.7 7,14.7C9.8,14.7 12.1,12.9 13.8,11.6Z"
                                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}">
                                <Path.Style>
                                    <Style TargetType="Path">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Path.Style>
                            </Path>

                            <Grid>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DataContext.IsDarkTheme, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Ellipse Width="8" Height="8"
                                         Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                         StrokeThickness="1.5" />
                                <Line X1="8" Y1="0.5" X2="8" Y2="3"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                <Line X1="8" Y1="13" X2="8" Y2="15.5"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                <Line X1="0.5" Y1="8" X2="3" Y2="8"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                <Line X1="13" Y1="8" X2="15.5" Y2="8"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                <Line X1="2.3" Y1="2.3" X2="4.1" Y2="4.1"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                <Line X1="11.9" Y1="11.9" X2="13.7" Y2="13.7"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                <Line X1="2.3" Y1="13.7" X2="4.1" Y2="11.9"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                                <Line X1="11.9" Y1="4.1" X2="13.7" Y2="2.3"
                                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                                      StrokeThickness="1.3" StrokeStartLineCap="Round" StrokeEndLineCap="Round" />
                            </Grid>
                        </Grid>
                    </Button>

                    <TextBlock Margin="16,0,0,0" VerticalAlignment="Center" Text="Status:" />
                    <TextBlock Margin="6,0,0,0"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="{Binding StatusBrush}"
                               Text="{Binding ConnectionStatus}" />
                </StackPanel>

                <Expander Margin="0,8,0,0"
                          Style="{StaticResource AdvancedExpanderStyle}"
                          Header="Advanced Serial Settings"
                          IsExpanded="{Binding ShowAdvancedSerialSettings}">
                    <WrapPanel Margin="8,6,0,0" VerticalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" Text="Data bits" />
                        <ComboBox Margin="8,0,14,0"
                                  Width="90"
                                  ItemsSource="{Binding DataBitsOptions}"
                                  SelectedItem="{Binding SelectedDataBits}" />

                        <TextBlock VerticalAlignment="Center" Text="Parity" />
                        <ComboBox Margin="8,0,14,0"
                                  Width="130"
                                  ItemsSource="{Binding ParityOptions}"
                                  SelectedItem="{Binding SelectedParity}" />

                        <TextBlock VerticalAlignment="Center" Text="Stop bits" />
                        <ComboBox Margin="8,0,14,0"
                                  Width="110"
                                  ItemsSource="{Binding StopBitsOptions}"
                                  SelectedItem="{Binding SelectedStopBits}" />

                        <TextBlock VerticalAlignment="Center" Text="Flow control" />
                        <ComboBox Margin="8,0,14,0"
                                  Width="170"
                                  ItemsSource="{Binding HandshakeOptions}"
                                  SelectedItem="{Binding SelectedHandshake}" />

                        <CheckBox Margin="8,0,10,0"
                                  VerticalAlignment="Center"
                                  Content="DTR"
                                  IsChecked="{Binding DtrEnable}" />
                        <CheckBox Margin="2,0,0,0"
                                  VerticalAlignment="Center"
                                  Content="RTS"
                                  IsChecked="{Binding RtsEnable}" />
                    </WrapPanel>
                </Expander>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                Style="{StaticResource CardBorderStyle}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Text="TX" />
                <TextBox Margin="8,0,0,0"
                         Width="560"
                         Text="{Binding TxInput, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SendCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button Content="Send" Command="{Binding SendCommand}" />
                <Button Content="Open Log File" Command="{Binding OpenLogFileCommand}" />
                <CheckBox Margin="16,0,0,0"
                          VerticalAlignment="Center"
                          Content="Paused"
                          IsChecked="{Binding IsPaused}" />
                <Button Content="Clear All" Command="{Binding ClearCommand}" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Style="{StaticResource CardBorderStyle}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Text="Filters" FontWeight="SemiBold" />
                <Button Content="Add Filter Tab" Command="{Binding AddFilterTabCommand}" />
                <Button Content="Remove Selected Tab" Command="{Binding RemoveSelectedFilterTabCommand}" />
                <Button Content="{Binding FilterDockText}" Command="{Binding ToggleFilterPanelDockCommand}" />
                <TextBlock Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Style="{StaticResource DockHintTextStyle}"
                           Text="Move filter panel right/bottom and resize with splitter." />
            </StackPanel>
        </Border>

        <Grid Grid.Row="3">
            <Grid Style="{StaticResource VisibleWhenRightDock}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="6" />
                    <ColumnDefinition Width="1.4*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Margin="0,0,0,8" FontWeight="SemiBold" Text="Raw Logs" />
                        <TextBox Grid.Row="1"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 IsReadOnly="True"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 Text="{Binding RawLogText, Mode=OneWay}" />
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1"
                              Width="6"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Style="{StaticResource SplitterStyle}"
                              ShowsPreview="True" />

                <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource FilterPanelTemplate}" />
                </Border>
            </Grid>

            <Grid Style="{StaticResource VisibleWhenBottomDock}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.15*" />
                    <RowDefinition Height="6" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Margin="0,0,0,8" FontWeight="SemiBold" Text="Raw Logs" />
                        <TextBox Grid.Row="1"
                                 FontFamily="Consolas"
                                 FontSize="13"
                                 IsReadOnly="True"
                                 TextWrapping="NoWrap"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 Text="{Binding RawLogText, Mode=OneWay}" />
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="1"
                              Height="6"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Style="{StaticResource SplitterStyle}"
                              ShowsPreview="True" />

                <Border Grid.Row="2" Style="{StaticResource CardBorderStyle}">
                    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource FilterPanelTemplate}" />
                </Border>
            </Grid>
        </Grid>

        <TextBlock Grid.Row="4"
                   Margin="8,6,0,0"
                   Style="{StaticResource DockHintTextStyle}"
                   Text="{Binding FooterText}" />
    </Grid>
</Window>
